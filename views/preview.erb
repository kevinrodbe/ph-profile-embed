<html>
<head>
  <meta charset="UTF-8">
  <title>Preview</title>
  <style>
  body {
    font-family: sans-serif !important;
    margin: 20px;
  }
  </style>
</head>
<body>
  <h1>Here's a preview of the widget:</h1>
  <br>
  <script type="text/javascript" id="embeddable-ph-<%= @user %>" >
  (function() {
    function async_load(){
      var s = document.createElement('script');
      s.type = 'text/javascript';
      s.async = true;
      var theUrl = 'http://ph-profile-embed.herokuapp.com/user/<%= @user %>';
      s.src = theUrl + ( theUrl.indexOf("?") >= 0 ? "&" : "?") + 'ref=' + encodeURIComponent(window.location.href);
      var embedder = document.getElementById('embeddable-ph-<%= @user %>');
      embedder.parentNode.insertBefore(s, embedder);
    }
    if (window.attachEvent)
      window.attachEvent('onload', async_load);
    else
      window.addEventListener('load', async_load, false);
  })();
</script>
</body>
</html>